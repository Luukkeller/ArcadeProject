<Window x:Class="arcadeGame.GameOverScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arcadeGame"
        mc:Ignorable="d"
        Title="GameOverScreen" Height="450" Width="800">
    <Grid>
        <Button x:Name="High_Scores" Content="High Scores" Margin="270,242,270,147" FontSize="20" />
        <Button x:Name="Quit" Content="Quit" Margin="270,310,270,79" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Height="61" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="48" FontWeight="Bold"><Run Language="nl-nl" Text="GAME OVER"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="74,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"><Run Language="nl-nl" Text="Score Player1:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="609,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"><Run Text="Score Player"/><Run Language="nl-nl" Text="2"/><Run Text=":"/></TextBlock>
    </Grid>
</Window>
