<Window x:Class="arcadeGame.GameOverScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arcadeGame"
        mc:Ignorable="d"
        Title="GameOverScreen" Height="450" Width="800"
        
           

    >
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/assets/GameOver.png"></ImageBrush>
        </Grid.Background>


        <MediaElement  Name="media2Element" 
     Width="450" Height="250" LoadedBehavior="Manual" UnloadedBehavior="Play" Stretch="Fill"/>
        <Button x:Name="Try_again" Content="Try again" Margin="270,217,270,172" FontSize="20" />
        <Button x:Name="High_Scores" Content="High Scores" Margin="270,278,270,111" FontSize="20" />
        <Button x:Name="Quit" Content="Quit" Margin="270,340,270,49" FontSize="20" />
        <TextBlock HorizontalAlignment="Center" Height="61" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" FontSize="48" FontWeight="Bold" Foreground="#FFE02828"><Run Language="nl-nl" Text="GAME OVER"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="74,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFC32121"><Run Language="nl-nl" Text="Score Player1:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="609,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFE02020"><Run Text="Score Player"/><Run Language="nl-nl" Text="2"/><Run Text=":"/></TextBlock>
    </Grid>

</Window>
