<Window x:Class="arcadeGame.GameWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arcadeGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">

    <Canvas Name="MyCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="Player1" 
            Fill="White" 
            Height="66" 
            Width="47" 
            Canvas.Left="336" 
            Canvas.Top="336" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"/>

        <Rectangle Name="Player2" 
            Fill="White" 
            Height="66" 
            Width="47" 
            Canvas.Left="424" 
            Canvas.Top="336" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            ClipToBounds="True" />

        
    </Canvas>
</Window>
