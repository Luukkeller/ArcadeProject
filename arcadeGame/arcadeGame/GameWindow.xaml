<Window x:Class="arcadeGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:arcadeGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="460" Width="810">
    <Canvas x:Name="myCanvas"
            Focusable="True"
            Background="HotPink"
            KeyDown="OnKeyDown"
            KeyUp="OnKeyUp" 
            Width="800" 
            Height="450" >
        <Rectangle x:Name="Player1"
                   Height="50"
                   Width="50"
                   Fill="LightSkyBlue"
                   Canvas.Left="100"
                   Canvas.Top="250"/>
        <Rectangle x:Name="Player2"
                   Height="50"
                   Width="50"
                   Fill="DodgerBlue"
                   Canvas.Left="400"
                   Canvas.Top="250"/>
        
        <Label x:Name="Text1" Canvas.Top="0" />
        <Label x:Name="Text2" Canvas.Top="10"/>
        <Label x:Name="Text3" Canvas.Top="20"/>
        <Label x:Name="Text4" Canvas.Top="30"/>

    </Canvas>
</Window>
